@model List<Menu.Models.Dish>
@{
    ViewData["Title"] = "MenuIndex";
}
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-6">
                <div class="d-flex justify-content-center">
                    <h4>@item.Name</h4>
                </div>
                <div class="d-flex justify-content-center">
                    <img src="@item.ImageUrl" style="width:30%"/>
                </div>
                <div class="d-flex justify-content-center">
                    <span>@item.Price.ToString("N2") Dollars</span>
                </div>
                <div class="d-flex justify-content-center">
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">View Details</a>
                </div>
            </div> 
        }
    </div>
</div>
